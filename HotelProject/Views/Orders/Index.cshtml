@model IEnumerable<HotelProject.Models.Order>

@{
    ViewData["Title"] = "Index";
}

<h1>רשימת הזמנות קיימות</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FromDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ToDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumOfAdults)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumOfKids)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumOfInfants)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalPrice)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FromDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ToDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumOfAdults)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumOfKids)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumOfInfants)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalPrice)
                </td>
                <td>
                    
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

