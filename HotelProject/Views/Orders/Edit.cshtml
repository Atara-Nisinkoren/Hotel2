@model HotelProject.Models.Order

@{
    ViewData["Title"] = "עריכת הזמנה";
}

<h1>עריכת הזמנה</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="FromDate" class="control-label"></label>
                <input asp-for="FromDate" class="form-control" />
                <span asp-validation-for="FromDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ToDate" class="control-label"></label>
                <input asp-for="ToDate" class="form-control" />
                <span asp-validation-for="ToDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumOfAdults" class="control-label"></label>
                <input asp-for="NumOfAdults" class="form-control" />
                <span asp-validation-for="NumOfAdults" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumOfKids" class="control-label"></label>
                <input asp-for="NumOfKids" class="form-control" />
                <span asp-validation-for="NumOfKids" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumOfInfants" class="control-label"></label>
                <input asp-for="NumOfInfants" class="form-control" />
                <span asp-validation-for="NumOfInfants" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TotalPrice" class="control-label"></label>
                <input asp-for="TotalPrice" class="form-control" />
                <span asp-validation-for="TotalPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">חזרה לרשימה</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@section Css{
    <link rel="stylesheet" href="~/css/Workers.css" />
}