@model HotelProject.Models.RoomsOrders

@{
    ViewData["Title"] = "Delete";
}

<h1>מחיקת הזמנה</h1>
<h3>האם את/ה בטוח/ה שאת/ה רוצה למחוק?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Room)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Room.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.Id)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="RoomId" />
        <input type="hidden" asp-for="OrderId" />
        <input type="submit" value="מחיקה" class="btn btn-danger" /> |
        <a asp-action="Index">חזרה לרשימה</a>
    </form>
</div>
